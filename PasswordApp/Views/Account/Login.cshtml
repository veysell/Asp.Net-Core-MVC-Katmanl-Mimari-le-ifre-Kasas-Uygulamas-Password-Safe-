@model EntitiyLayer.Entities.User
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Login | PasswordSafe</title>
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head><!--/head-->

<body style="background-color:#f8f9fa">

    <style>
        input {
            border-color: #987687;
            border-radius: 5px;
            text-shadow: 1px #000000;
        }

            input:hover {
                border-color: #6e588e;
                border-radius: 8px;
                box-shadow: 0 0 11px;
            }
    </style>

    <div class="container mt-5 text-center">
        <div class="row">

            <div class="col-md-12 text-center">
                <h2>Giriş</h2>
                <hr />
                <form action="/Account/Login" method="post">
                    <div class="form-group text-center">
                        <input type="email" placeholder="Email Adresi" name="Mail" />
                    </div>
                    <div class="form-group mb-4 text-center">
                        <small class="form-text text-muted">@ViewBag.hata</small>
                    </div>
                    <div class="form-group mb-4 text-center">
                        <input type="password" placeholder="Şifre" name="Password" />
                    </div>
                    <div class="form-group mb-2 text-center">
                        <button type="submit" class="btn btn-primary">Giriş Yap</button>
                        <a class="btn btn-secondary" href="/Account/Register">Kayıt Ol</a>
                    </div>

                </form>
            </div>
           


        </div>
    </div>

</body>
</html>
