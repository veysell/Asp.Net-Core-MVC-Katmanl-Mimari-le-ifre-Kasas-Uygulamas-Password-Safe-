@model EntitiyLayer.Entities.Password
@{
    ViewBag.Title = "Create";
}


<link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/bootstrap/js/bootstrap.min.js"></script>
<div>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <form method="post">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "btn btn-danger" })

                    <div class="form-group">
                        <label>Site Adı</label>
                        <input type="text" class="form-control" name="WebSiteName" />
                        @Html.ValidationMessageFor(x => x.WebSiteName, "", new { @style = "color:red" })
                    </div>
                    <br />
                    <div class="form-group">
                        <label>Site Kullanıcı Adı</label>
                        <input type="text" class="form-control" name="SiteUserName" />
                        @Html.ValidationMessageFor(x => x.SiteUserName, "", new { @style = "color:red" })
                    </div>
                    <br />
                    <div class="form-group">
                        <label>Şifre</label>
                        <input type="text" class="form-control" name="SitePassword" />
                        @Html.ValidationMessageFor(x => x.SitePassword, "", new { @style = "color:red" })
                    </div>
                    <br />
                    <div class="form-group">
                        <label>Şifre Tekrar</label>
                        <input type="text" class="form-control" name="ReSitePassword"/>
                        @Html.ValidationMessageFor(x => x.ReSitePassword, "", new { @style = "color:red" })
                    </div>
                    <br />
                    <button class="btn btn-primary" type="submit">Ekle</button>
                </form>
            </div>
        </div>
    </div>
</div>

